{
    "compilerOptions": {
        "removeComments": false,
        "experimentalDecorators": true,
        "sourceMap": false,
        "noImplicitAny": true,
        "target": "es2017",
        "lib": ["es6", "es7"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist"
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*"
    ]
}